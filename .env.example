# Configuraci√≥n del Sistema HybridSecScan
# =======================================

# Base de Datos
DATABASE_URL=sqlite:///./database/hybridsecscan.db
DATABASE_ECHO=False

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True
API_WORKERS=4

# Frontend Configuration
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Security Settings
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_EXTENSIONS=[".py", ".js", ".ts", ".tsx", ".java", ".cpp", ".c", ".go", ".php", ".rb", ".cs"]
SECURE_SCAN_BASE=/tmp/hybridscan_secure

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=hybridscan_audit.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(funcName)s:%(lineno)d - %(message)s

# SAST Tools Configuration
BANDIT_CONFIG_FILE=.bandit
BANDIT_OUTPUT_FORMAT=json
SEMGREP_CONFIG=auto
SEMGREP_TIMEOUT=300

# DAST Tools Configuration
ZAP_API_KEY=
ZAP_TIMEOUT=600
ZAP_PROXY_PORT=8090

# Machine Learning Configuration
ML_MODEL_PATH=models/correlation_model.joblib
ML_N_ESTIMATORS=200
ML_MAX_DEPTH=15
ML_MIN_SAMPLES_SPLIT=5
ML_RANDOM_STATE=42
ML_CORRELATION_THRESHOLD=0.7

# Performance Settings
SUBPROCESS_TIMEOUT=300
CONCURRENT_SCANS_LIMIT=5
CACHE_ENABLED=True
CACHE_TTL_SECONDS=3600

# Reporting Configuration
REPORTS_DIR=reports
UPLOADS_DIR=uploads
MAX_REPORT_AGE_DAYS=30

# Metrics Configuration
METRICS_ENABLED=True
METRICS_INTERVAL_SECONDS=60
ENABLE_PERFORMANCE_TRACKING=True

# Development Settings (Change in production)
DEBUG=False
TESTING=False
RELOAD_ON_CHANGE=True
